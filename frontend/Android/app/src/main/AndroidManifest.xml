<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kr.co.golearn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_ver2_3"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_ver2_3_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoLearn">
        <activity android:name=".view.course.CourseIndexActivity"/>
        <activity
            android:name=".view.video.ReplyBottomFragment"
            android:theme="@android:style/Theme.Material.Light.Dialog"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.video.CommentReplyBottomFragment"
            android:theme="@android:style/Theme.Material.Light.Dialog"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.video.VideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".view.main.channel.ChannelActivity" />
        <activity android:name=".view.account.JoinPwActivity" />
        <activity android:name=".view.account.JoinIdActivity" />
        <activity android:name=".view.account.LoginActivity" />
        <activity android:name=".view.main.MainActivity" />
        <activity android:name=".view.account.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>